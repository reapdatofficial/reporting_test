import pandas as pd
import nltk
from textblob import TextBlob
from nltk.corpus import stopwords
from nltk.tokenize import word_tokenize

# Download necessary NLTK data
nltk.download('punkt')
nltk.download('stopwords')

# Function to preprocess text
def preprocess_text(text):
    # Convert to lowercase
    text = text.lower()
    # Tokenize the text
    tokens = word_tokenize(text)
    # Remove stopwords
    tokens = [word for word in tokens if word not in stopwords.words('english')]
    # Join the tokens back into a string
    return ' '.join(tokens)

# Function to analyze sentiment
def analyze_sentiment(text):
    # Use TextBlob to get sentiment polarity
    return TextBlob(text).sentiment.polarity

# Read CSV file
df = pd.read_csv('path_to_your_file.csv')  # Replace with your file path

# Preprocess the reviews
df['cleaned_review'] = df['review'].apply(preprocess_text)  # Replace 'review' with your column name

# Perform sentiment analysis
df['sentiment'] = df['cleaned_review'].apply(analyze_sentiment)

# Save results to a new CSV file
df.to_csv('sentiment_analysis_results.csv', index=False)

print("Sentiment analysis complete. Results saved to sentiment_analysis_results.csv")
